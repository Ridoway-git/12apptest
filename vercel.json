{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install",
        "buildCommand": "npm run build",
        "outputDirectory": "build/public"
      }
    },
    {
      "src": "build/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "build/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "build/public/$1"
    }
  ]
} 